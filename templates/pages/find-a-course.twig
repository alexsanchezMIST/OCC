{% extends 'base.twig' %} 

{% block content %} 

<main id="main" class="main" role="main">
    <section id="content" class="section pt-18">
        <div class="container">
            <div class="section__helmet">
                <h1 class="hero__heading">{{ post.title }}</h1>
                <p class="hero__subheading">{{ post.content }}</p>
            </div>
            <div class="deal__wrapper">
                {% for post in courses %}
                <a href="{{ pro_deal.link }}" class="deal__card">
                    <!-- {% if pro_deal.meta('logo') %} -->
                        <img src="{{ Image(post.meta('image')).src }}" alt="" class="deal__logo mb-4">
                        {% else %}
                        <h4 class="deal__heading mb-2">{{ post.title }}</h4>
                    <!-- {% endif %} -->
                    <p class="deal__excerpt">{{ post.content|excerpt(8) }}</p>
                </a>
                {% endfor %}
            </div>
        </div>
    </section>

    {% include 'partial/mountains.twig' %}

</main>

{% endblock %}