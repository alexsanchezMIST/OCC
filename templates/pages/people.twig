{% extends "base.twig" %}

{% block content %}

{# BEGIN HERO SECTION #}
<section id="hero--page" class="section section--hero">
    <div class="container">
        <div class="hero__wrapper">
            <h1 class="hero__heading--page">Team Members</h1>
            <a href="/" class="btn btn--primary">Become a member â†’</a>
        </div>
    </div>
</section>
{# END HERO SECTION #}

{# BEGIN CONTENT SECTION #}
<section id="people" class="section">
    <div class="container">
        <div class="people__wrapper">
            {% for post in team_members %}
            <a href="{{ post.link }}" class="people__card">
                {% if post.thumbnail %}
                <img src="{{ post.thumbnail }}" alt="" class="people__card__image">
                {% endif %}
                <h3 class="people__card__heading">{{ post.title }}</h3>
                <p class="people__card__title">{{ post.position }}</p>
            </a>
            {% endfor %}
        </div>
    </div>
</section>
{# END CONTENT SECTION #}

